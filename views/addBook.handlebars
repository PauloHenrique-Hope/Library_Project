<form action="/book/create" method="POST" class="book-form">
    
    <div class="book-container">
        <h3>Add your book</h3>
        <div>
            <label for="title" class="label label-title">Title</label>
            <input class="input input-title" type="text" name="title" placeholder="Enter the book's title: ">
        </div>
         <div>
            <label for="n_pages" class="label label-title">Pages</label>
            <input class="input input-pages" type="number" name="n_pages" placeholder="Enter the number of pages: ">
        </div>
        <div class="btn-submit"><button type="submit">submit</button></div>
    </div>

</form>